<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet id="2" author="Antonio Aguilar">
        <addColumn tableName="access_tokens">
            <column name="is_valid" type="boolean">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!--
        These are the default sequence names for Postgres. Hibernate uses an allocation size of 50 so sequences
        are altered to match it.
        -->
        <alterSequence sequenceName="access_tokens_id_seq" incrementBy="50"/>
        <alterSequence sequenceName="handler_servers_id_seq" incrementBy="50"/>
        <alterSequence sequenceName="routes_id_seq" incrementBy="50"/>

    </changeSet>
</databaseChangeLog>